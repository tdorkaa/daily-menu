{
    "require": {
        "php": "~7.0",
        "slim/slim": "^3.10",
        "robmorgan/phinx": "^0.10.6",
        "vlucas/phpdotenv": "^2.5",
        "paquettg/php-html-parser": "^1.7",
        "twig/twig": "^2.5",
        "monolog/monolog": "^1.23",
        "slim/twig-view": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "DailyMenu\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "migrate": "vendor/bin/phinx migrate -e development",
        "seed": "vendor/bin/phinx seed:run -e development",
        "post-install-cmd": [
            "@migrate",
            "@seed"
        ]
    }
}
